<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical"
    tools:context="com.admin.shopkeeper.ui.activity.activityOfBoss.returnanalysis.ReturnAnalysisActivity">

    <include layout="@layout/boss_common_toolbar" />

    <View
        style="@style/LineHorStyle"
        android:layout_marginTop="@dimen/_30sdp" />

    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:layout_width="wrap_content"
            android:text="获取1积分消费(元)" />

        <EditText
            android:id="@+id/edit_center"
            style="@style/SettingItemEditStyle"
            android:inputType="numberDecimal"
            android:hint="请输入获取1积分消费多少元" />

    </LinearLayout>

    <View style="@style/LineHor2Style" />

    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:layout_width="wrap_content"
            android:text="使用1积分抵用(元)" />

        <EditText
            android:id="@+id/edit_order"
            style="@style/SettingItemEditStyle"
            android:inputType="numberDecimal"
            android:hint="请输入使用1积分抵用多少元" />

    </LinearLayout>

    <View style="@style/LineHorStyle" />
    <View
        style="@style/LineHorStyle"
        android:layout_marginTop="@dimen/_32sdp" />
    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:text="累加积分" />

        <RadioGroup
            android:id="@+id/jifen_adding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_32sdp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="是" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="否" />

        </RadioGroup>

    </LinearLayout>
    <View style="@style/LineHor2Style" />
    <LinearLayout style="@style/SettingItemStyle">

        <TextView
            style="@style/SettingItemTextStyle"
            android:text="积分兑换" />

        <RadioGroup
            android:id="@+id/jifen_exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_32sdp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="是" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="否" />

        </RadioGroup>

    </LinearLayout>
    <View
        style="@style/LineHorStyle"
        android:layout_marginTop="@dimen/_32sdp" />

    <LinearLayout
        android:id="@+id/ll_yuding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="微信预定"
            android:textColor="@color/black"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:id="@+id/text_yuding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:drawablePadding="@dimen/_21sdp"
            android:drawableRight="@mipmap/list_icon_arrow_right"
            android:gravity="right"
            android:text="积分兑换"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_waimai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:visibility="gone"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="外卖"
            android:textColor="@color/black"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:id="@+id/text_waimai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:drawablePadding="@dimen/_21sdp"
            android:drawableRight="@mipmap/list_icon_arrow_right"
            android:gravity="right"
            android:text="积分兑换"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_kuaican"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:visibility="gone"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="快餐"
            android:textColor="@color/black"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:id="@+id/text_kuaican"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:drawablePadding="@dimen/_21sdp"
            android:drawableRight="@mipmap/list_icon_arrow_right"
            android:gravity="right"
            android:text="积分兑换"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_saoma"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:visibility="gone"
        android:background="@drawable/selector_item"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_30sdp"
            android:text="扫码点餐"
            android:textColor="@color/black"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:id="@+id/text_saoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_30sdp"
            android:drawablePadding="@dimen/_21sdp"
            android:drawableRight="@mipmap/list_icon_arrow_right"
            android:gravity="right"
            android:text="积分兑换"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_88sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/btn_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/_36ssp" />


</LinearLayout>
