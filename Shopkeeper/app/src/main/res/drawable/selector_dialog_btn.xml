<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_40sdp" />
            <solid android:color="@color/colorPress" /><!-- 填充的颜色 -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_44sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorDialogBtnStroke" />
            <solid android:color="@color/colorDialogBtn" /><!-- 填充的颜色 -->
        </shape>
    </item>
    <item android:drawable="@drawable/shape_login_btn_press" android:state_pressed="true" />   <!--点击时手指未松开的背景-->
</selector>